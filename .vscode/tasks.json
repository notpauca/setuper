{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"--std=c++17",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"--library-directory=${workspaceFolder}/lib/",
				"--include-directory=${workspaceFolder}/Include/",
				"-lcurl",
				"-lz",
				"-lbz2",
				"${workspaceFolder}/src/main.cpp",
				"-o",
				"${workspaceFolder}/bin/setuper",
				"-g"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiles the files with clang++"
		}
	]
}